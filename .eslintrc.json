{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["airbnb-base"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": "off",
        "comma-dangle": "off",
        "object-curly-newline": "off",
        "no-param-reassign": "off",
        "implicit-arrow-linebreak": "off",
        "new-cap": "off",
        "operator-linebreak": "off",
        "no-shadow": "off",
        "class-methods-use-this": "off"
    }
}
